{
    "name": "wordpress/responsive",
    "description": "Responsive Theme is a flexible foundation with fluid grid system that adapts your website to mobile devices.",
    "type": "package",
    "license": "GPL-2.0-or-later",
    "keywords": [
      "WordPress",
      "Themes"
    ],
    "authors": [
      {
        "name": "CyberChimps",
        "homepage": "https://www.cyberchimps.com"
      }
    ],
    "require-dev": {
      "wptrt/wpthemereview": "0.2.1",
      "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
      "squizlabs/php_codesniffer": "^3.0.2"
    },
    "scripts": {
      "phpcs-i": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -i",
      "lint": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
      "format": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
      "post-install-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
      "post-update-cmd" : "./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
      "phpcsall": [
        "phpcs --report=full --colors -p --standard=WordPress --ignore=*/vendor/*,*/node_modules/*,*/tests/*,*/jenkincodeception/* . --extensions=php"
      ]
    },
    "support"    : {
      "issues": "https://bitbucket.org/cyberchimps/responsive/",
      "source": "https://bitbucket.org/cyberchimps/responsive/"
    },
    "require": {
        "wp-coding-standards/wpcs": "^2.2"
    }
}
